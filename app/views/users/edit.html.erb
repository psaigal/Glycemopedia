<h1 class="page-heading">Edit Information</h1>

<%= form_for :user, url: "/users/#{current_user.id}", method: :patch, :class => "user-login" do |f| %>
  <div class="form-group">
  Name: <%= f.text_field :name, :value => current_user.name, :class => "form-control" %>
  </div>
  <div class="form-group">
  Email: <%= f.text_field :email, :value => current_user.email, :class => "form-control" %>
  </div>
  <div class="form-group">
  Password: <%= f.password_field :password, :class => "form-control" %>
  </div>
  <div class="form-group">
  Password Confirmation: <%= f.password_field :password_confirmation, :class => "form-control" %>
  </div>
  <div class="form-group">
  <%= f.submit "Submit", class: 'btn btn-success' %>
  </div>
<% end %>




